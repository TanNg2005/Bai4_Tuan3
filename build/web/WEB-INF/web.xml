    <display-name>Email List Application</display-name>
    <!-- Welcome file list -->
    <servlet>
        <servlet-name>EmailListServlet</servlet-name>
        <servlet-class>com.murach.controller.EmailListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailListServlet</servlet-name>
        <url-pattern>/EmailListServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
